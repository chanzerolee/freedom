package freedomgame;

public enum Weapon {
	LONGSORD(1,"LongSord","100","5"),
	BFSORD(2,"BFSord","500","15"),
	STEELSORD(3,"SteelSord","300","30"),
	LIGHTSORD(4,"LightSord","10000G","50");
	
	private String weapon;
	private String price;
	private String damege;
	private int num;
	Weapon(int num,String weapon,String price,String damege){
		this.num = num;
		this.weapon = weapon;
		this.price = price;
		this.damege = damege;
	}
	public int getNum() {
		return num;
	}
	public String getWeapon() {
		return this.weapon;
	}
	public String getPrice() {
		return this.price;
	}
	public String getDamege() {
		return this.damege;
	}
}
