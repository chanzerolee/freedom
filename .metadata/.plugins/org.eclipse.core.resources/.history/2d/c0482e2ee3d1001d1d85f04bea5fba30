package game.model;
import java.util.Scanner;

import freedomgame.Action;
import freedomgame.User;

public class GameModel {
	User user = new User();
	Action action = new Action();
	public void playGame() {
		boolean power = true;
		Scanner input = new Scanner(System.in);
		System.out.println("이름을 정해주세요. : ");
		user.setName(input.next());
		// 액션 클래스에서 행동 텍스트 출력과 선택 번호에 따른 행동 하기.
		while(power) {
			if(action.playList()==1) {
				while(true) {
					switch(action.goShop()) {
						case 1:
							action.buyWeapon();
						case 2:
							action.sellWeapon();
						case 3:
							action.enforceWeapon();
						case 4:
							action.catchWeapon();
					}	
				}
			}else if(action.playList()==2) {
					while(true){
						switch(action.goDongoen()) {
							case 1:
							case 2:
							case 3:						
						}
					}
			}else if(action.playList()==3) {
				power = false;
				action.endGame();
			}else {
				//다른 번호 눌렀을때 예외로 처리해보자.
			}
		}
	}
	
	public void getName() {
		user.getName();
	}

	public void setName(String name) {
		user.setName(name);
	}
	
}
