package freedomgame;

import java.util.Scanner;

public class Action {
	Scanner sn = Scanner(Sysetem.in);
	public int playList() {
		System.out.println("행동을 선택해 주세요 !!");
		System.out.println("1. 상점가기");
		System.out.println("2. 던전 이동");
