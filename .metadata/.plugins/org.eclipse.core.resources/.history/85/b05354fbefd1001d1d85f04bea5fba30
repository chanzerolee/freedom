package game.model;
import java.util.Scanner;

import freedomgame.Action;
import freedomgame.Monster;
import freedomgame.User;

public class GameModel {
	User user = new User();
	Action action = new Action();
	public void playGame() {
		boolean power = true;
		Scanner input = new Scanner(System.in);
		System.out.println("게임을 시작합니다.");
		System.out.println("이름을 정해주세요. : ");
		user.setName(input.next());
		// 액션 클래스에서 행동 텍스트 출력과 선택 번호에 따른 행동 하기.
		while(power) {
			boolean outStage = true;
			int num = action.playList();
			if(num == 1) {
				System.out.println("보유금액 : "+user.getMoney());
				while(outStage) {
					switch(action.goShop()) {
						case 1:
							action.buyWeapon(user);
							break;
						case 2:
							action.sellWeapon(user);
							break;
						case 3:
							action.enforceWeapon(user);
							break;
						case 4:
							action.outStage();
							outStage = false;
							break;
					}	
				}
			}else if(num == 2) {
				Monster monster = new Monster(action.goDongoen());
				long startTime = System.currentTimeMillis();
				long endTime = System.currentTimeMillis();
				boolean clear = false;
				while(endTime-startTime>10){
						try {
							Thread.sleep(500);
						} catch (InterruptedException e) {
							e.printStackTrace();
						}
						monster.attack(user.getDamege());
						if (monster.getHp() <= 0) {
							clear = true;
							break;
						}
						endTime =  System.currentTimeMillis();
					}
			}else if(num == 3) {
				power = action.endGame();
			}else {
				//다른 번호 눌렀을때 예외로 처리해보자.
			}
		}
	}
	
	public void getName() {
		user.getName();
	}

	public void setName(String name) {
		user.setName(name);
	}
	
}
